{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "ESNext",  // Changed to output native ESM code
    "target": "ES2020",
    "outDir": "build",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "socket-server.ts", "src/**/*"]
}


